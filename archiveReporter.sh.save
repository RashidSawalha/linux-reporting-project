


echo "Archiving reports"

REPORT_DIR="/mnt/metrics"
ARCHIVE_DIR="/backups"
TIMESTAMP=$(date +%s)
ARCHIVE_NAME="status_${TIMESTAMP}.t
tar -czf "$ARCHIVE_DIR/$ARCHIVE_NAME" -C "$REPORT_DIR" .
sudo chown -R root:reportgroup /backups
sudo chmod -R 750 /backups

echo "Report archived at $ARCHIVE_DIR/$ARCHIVE_NAME"

